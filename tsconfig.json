{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es2015",
    "target": "es2017",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "src/typings"]
  },
  "exclude": [
    "node_modules"
  ]
}